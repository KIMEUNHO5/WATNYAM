<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vh_duam_video_frame"
    android:elevation="8dp"
    android:layout_margin="@dimen/vh_margin"
    android:layout_height="@dimen/vh_height"
    android:layout_width="@dimen/vh_width">

    <ImageView
        android:id="@+id/img_daum_video"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_vh_daum_video_title"
            android:textSize="16sp"
            android:text="TITLE"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:background="@drawable/scrim_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</FrameLayout>
